package realworldsoftwdevelop.bankstatements;

import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.time.LocalDate;
import java.time.Month;
import java.time.format.DateTimeFormatter;
import java.util.Arrays;
import java.util.List;

public class BankTransactionalAnalyzerSimple {

	private static final String RESOURCES = "src/main/resources/";

	public static void main(String[] args) throws IOException {
		
		Path path = Paths.get(RESOURCES + args[0]);
		if(Files.exists(path)) {
			List<String> lines = Files.readAllLines(path);
			Double[] total = new Double[12];
			Arrays.fill(total, 0.0);
			DateTimeFormatter DATE_PATTERN = DateTimeFormatter.ofPattern("dd-MM-yyyy");
			for(String line : lines) {
				String[] columns = line.split(",");
				LocalDate date = LocalDate.parse(columns[0], DATE_PATTERN);
				int getMonth = date.getMonth().getValue();
				double amount = Double.parseDouble(columns[1]);
				total[getMonth-1] += amount;
			}
			System.out.println("The total amount for all transactions is " + total);
			for(int i = 0; i < total.length; i++) {
				if(total[i] != 0) {
					System.out.println("Month " + Month.of(i+1) + " the amount is " + total[i]);
				}
			}
		}else {
			System.out.println("No ha indicado un fichero correcto");
		}
		
	}

}
